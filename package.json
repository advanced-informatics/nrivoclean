{
  "name": "nviroclean",
  "version": "1.0.0",
  "description": "NViroClean - Professional UPVC, soffits and fascias cleaning website",
  "scripts": {
    "start": "serve . -p 8000",
    "test": "jest --verbose",
    "validate": "html-validate index.html services.html about.html contact.html",
    "test:links": "linkinator . --recurse --skip 'formspree|tel:'",
    "test:a11y": "start-server-and-test start http://localhost:8000 pa11y-ci",
    "test:lighthouse": "lhci autorun",
    "test:all": "npm run validate && npm test && npm run test:links && npm run test:a11y && npm run test:lighthouse"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "html-validate": "^10.8.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "linkinator": "^7.5.3",
    "pa11y-ci": "^4.0.1",
    "serve": "^14.2.5",
    "start-server-and-test": "^2.1.3"
  }
}
